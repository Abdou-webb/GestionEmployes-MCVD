<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<VBox spacing="0" prefHeight="800.0" prefWidth="1100.0" styleClass="main-bg"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.myapp.controllers.EmployeeController">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="20"
              style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets left="30.0" right="30.0" />
            </padding>
            <children>
                <ImageView fitHeight="40.0" preserveRatio="true">
                    <image><Image url="@../images/logo.png" /></image>
                </ImageView>
                <Label text="EMSI RH - Dashboard Administration" styleClass="label-header" style="-fx-font-size: 20;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#handleLogout" text="Déconnexion" styleClass="button-logout" />
            </children>
        </HBox>

        <VBox spacing="25.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="30.0" right="30.0" bottom="30.0" left="30.0" />
            </padding>
            <children>

                <VBox spacing="15.0" styleClass="card">
                    <padding>
                        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                    </padding>
                    <children>
                        <Label text="Gestion des Employés" styleClass="label-title" />
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="txtId" promptText="ID" prefWidth="60.0" />
                                <TextField fx:id="txtNom" promptText="Nom" HBox.hgrow="ALWAYS" />
                                <TextField fx:id="txtPrenom" promptText="Prénom" HBox.hgrow="ALWAYS" />
                                <TextField fx:id="txtPoste" promptText="Poste" HBox.hgrow="ALWAYS" />
                                <TextField fx:id="txtSalaire" promptText="Salaire" prefWidth="100.0" />
                            </children>
                        </HBox>

                        <HBox spacing="10.0" alignment="CENTER_RIGHT">
                            <children>
                                <Button onAction="#handleAjouter" text="Ajouter" styleClass="btn-success" prefWidth="100.0" />
                                <Button onAction="#handleModifier" text="Modifier" styleClass="btn-warning" prefWidth="100.0" />
                                <Button onAction="#handleSupprimer" text="Supprimer" styleClass="btn-danger" prefWidth="100.0" />
                                <Separator orientation="VERTICAL" />
                                <Button onAction="#handleEnvoyerTache" text="Assigner Tâche" styleClass="btn-info" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox spacing="10.0" styleClass="card" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0" />
                    </padding>
                    <children>
                        <TableView fx:id="tableEmployes" onMouseClicked="#handleTableClick" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colId" text="ID" prefWidth="50.0" />
                                <TableColumn fx:id="colNom" text="Nom" />
                                <TableColumn fx:id="colPrenom" text="Prénom" />
                                <TableColumn fx:id="colPoste" text="Poste" />
                                <TableColumn fx:id="colSalaire" text="Salaire (DH)" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

            </children>
        </VBox>
    </children>
</VBox>